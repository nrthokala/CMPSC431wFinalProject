CREATE STATEMENTS

CREATE SCHEMA “NeoFitness”;   /* Create my schema in the database */
SET Schema ‘NeoFitness’;  /* connects me to the schema created */
 
CREATE table ”User” 
(UserId SERIAL primary key, 
UserName varchar(100), 
Age integer, 
Address varchar(500));

CREATE table ”Food” 
(FoodId SERIAL primary key, 
foodName varchar(250), 
calories integer, 
foodGroup varchar(200));

CREATE table ”UserHealth”
(UserHealthId SERIAL primary key, 
UserId integer REFERENCES “User”(UserId), 
HealthConditions varchar(250));

CREATE table ”UserGoal” 
(UserGoalId SERIAL primary key, 
GoalType varchar(25), 
UserId integer REFERENCES “User”(UserId), 
currentWeight integer, 
GoalWeight integer);

CREATE table ”UserPayment”
(UserPaymentId SERIAL primary key, 
UserId integer REFERENCES “User”(UserId), 
Amount Numeric(5,2), 
DatePaid Date);

CREATE table ”Exercise” 
(ExerciseId SERIAL primary key, 
ExerciseType varchar(100), 
caloriesPerKg integer);

CREATE table ”FoodLog” 
(FoodLogId SERIAL primary key, 
FoodId integer REFERENCES “Food”(FoodId), 
UserId integer REFERENCES “User”(UserId), 
FoodLogDate Date);

CREATE table ”Recipes” 
(RecipeId SERIAL primary key, 
RecipeName varchar(150), 
caloriesPerServing integer);

CREATE table ”RecipeLog” 
(RecipeLogId SERIAL primary key, 
RecipeId integer REFERENCES “Recipes”(RecipeId), 
UserId integer REFERENCES “User”(UserId), 
NumOfServings integer, 
RecipeLogDate Date);

CREATE table ”WaterLog” 
(WaterLogId SERIAL primary key, 
UserId integer REFERENCES “User”(UserId), 
NumOfServings integer, 
WaterLogDate Date);

CREATE table ”ExerciseLog” 
(ExerciseLogId SERIAL primary key, 
ExerciseId integer REFERENCES “Exercise”(ExerciseId), 
UserId integer REFERENCES “User”(UserId), 
ExerciseLogDate Date);

CREATE table ”UserConnections”
 (UserConnectionsId SERIAL primary key, 
UserId integer REFERENCES “User”(UserId), 
ConnectedtoUserId integer REFERENCES “User”(UserId));

CREATE table ”DailyGoalTracker” 
(DailyGoalTrackerId SERIAL primary key, 
caloriesConsumed integer, 
RecipeLogId integer REFERENCES “RecipeLog”(RecipeLogId), 
UserId integer REFERENCES “User”(UserId), 
caloriesBurnt integer, 
waterLogId integer REFERENCES “WaterLog”(waterLogId), 
FoodLogId integer REFERENCES “FoodLog”(FoodLogId), 
ExerciseLogId integer REFERENCES “ExerciseLog”(ExerciseLogId), 
daysResult varchar(250));
